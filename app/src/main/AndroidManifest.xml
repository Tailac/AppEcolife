<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.taila.appecolife">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScannerQRCodeActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_scanner_qrcode"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CadastroActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_cadastro"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CodigoSegurancaActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_codigo_seguranca"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GerenciarContaActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_gerenciar_conta"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ScannerBarCodeActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_scanner_bar_code"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <activity
            android:name=".ResiduoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_residuo"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PontuacaoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_pontuacao"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ResiduoNaoCadastradoActivity"
            android:label="@string/title_activity_residuo_nao_cadastrado"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DescarteActivity"
            android:label="@string/title_activity_descarte"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>